<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="453.0" prefWidth="620.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlador.AbrirEmpresaController">
   <children>
      <VBox alignment="TOP_CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <!-- CABECERA -->
            <AnchorPane>
               <children>
                  <ImageView fx:id="retroceder" fitHeight="47.0" fitWidth="31.0" layoutX="14.0" layoutY="11.0" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
                     <image>
                        <Image url="@../../retroceder.png" />
                     </image>
                  </ImageView>
                  <Label alignment="CENTER" layoutX="262.0" layoutY="17.0" text="Abrir Empresa" AnchorPane.bottomAnchor="17.4" AnchorPane.leftAnchor="261.6" AnchorPane.rightAnchor="282.8" AnchorPane.topAnchor="16.799999999999997" />
               </children>
            </AnchorPane>

            <!-- TABLA DE EMPRESAS -->
            <TableView fx:id="tablaEmpresas" prefHeight="371.0" prefWidth="600.0" style="-fx-background-color: #6F9E11;">
              <columns>
                <TableColumn fx:id="colId" prefWidth="75.0" text="ID Empresa" />
                <TableColumn fx:id="colNombre" prefWidth="75.0" text="Nombre" />
                <TableColumn fx:id="colNif" prefWidth="75.0" text="NIF" />
                <TableColumn fx:id="colTelefono" prefWidth="75.0" text="Teléfono" />
                <TableColumn fx:id="colCorreo" prefWidth="75.0" text="Correo" />
                <TableColumn fx:id="colDireccion" prefWidth="75.0" text="Dirección" />
                <TableColumn fx:id="colCiudad" prefWidth="75.0" text="Ciudad" />
                <TableColumn fx:id="colCp" prefWidth="75.0" text="CP" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>

            <!-- BOTONES DE ACCIÓN -->
            <HBox alignment="CENTER" prefHeight="76.0" prefWidth="600.0" spacing="10.0">
               <children>
                  <Button fx:id="btnAbrir" alignment="CENTER" prefWidth="80.0" style="-fx-background-color: A1EB63; -fx-cursor: hand;" text="Abrir" />
                  <Button fx:id="btnEliminar" alignment="CENTER" prefWidth="80.0" style="-fx-background-color: A1EB63; -fx-cursor: hand;" text="Eliminar" />
                  <Button fx:id="btnModificar" alignment="CENTER" prefWidth="80.0" style="-fx-background-color: A1EB63; -fx-cursor: hand;" text="Modificar" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
